<h2 class="page-header"><%= locals.author.name%></h2>
<div class="btn-row">
  <a class="btn btn-primary" href="/authors/<%= locals.author.id%>/edit">Edit</a>
  <%- include('../partials/deleteForm', {url: `/authors/${author.id}`})%>
</div>
<% if
(locals.booksByAuthor.length> 0){%>
<h2 class="page-header">Books by Author</h2>
<% locals.booksByAuthor.forEach(book => { %>
<a href="/books/<%= book.id%>">
  <img height="150" width="100" src="<%= book.coverImagePath %>" />
</a>
<% }) %> <% } %>