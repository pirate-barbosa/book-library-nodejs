<h2>Search Book</h2>
<form action="/books" method="GET">
  <div>
    <label>Title</label>
    <input type="text" name="title" value="<%= locals.searchOptions.title %>" />
  </div>
  <div>
    <label>Published After</label>
    <input
      type="date"
      name="publishedAfter"
      value="<%= locals.searchOptions.publishedAfter %>"
    />
  </div>
  <div>
    <label>Published Before</label>
    <input
      type="date"
      name="publishedBefore"
      value="<%= locals.searchOptions.publishedBefore %>"
    />
  </div>
  <button type="submit>">Submit</button>
</form>
<div>
  <% locals.books.forEach(book => { %>
  <a href="/books/<%= book.id %>">
    <img height="150" width="100" src="<%= book.coverImagePath %>" />
  </a>
  <% }) %>
</div>
